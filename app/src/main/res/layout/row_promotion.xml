<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ccc"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:id="@+id/PromotionRowLL">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="11dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp">

            <ImageView
                android:id="@+id/full_image"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                />

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/full_image"
                android:textSize="17sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/name_text_color"
                android:text="A Guide To Rocky Mountain Vacations"/>


            <!--<ImageView
                android:id="@+id/profile_image"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/descriptionTV"
                android:src="@drawable/ic_face_black_24dp"/>
-->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/descriptionTV"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/name_text_color"
                android:text="Ryan Estrada"/>


            <TextView
                android:id="@+id/distanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textSize="14sp"
                android:layout_below="@id/descriptionTV"
                android:layout_toRightOf="@id/profile_name"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:text="200 meter from here"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>